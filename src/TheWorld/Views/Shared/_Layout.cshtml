<!DOCTYPE html>

<html>
<head>
    <title>The World</title>
    <meta Charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/linkedin.png" alt="linkedIn" class="menu linked" />
        <span id="username">Samuel</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle menu</button>
            </div>
           <div>
               @RenderBody()
           </div>
        </div>
        <div id="footer">
            &copy; 2015 The World Ltd.
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>